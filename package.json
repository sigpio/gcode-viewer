{
  "name": "gcode-file-viewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "start": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "gcode-parser": "^2.2.0",
    "i18next": "^23.11.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^13.4.0",
    "three": "^0.165.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.6.2",
    "vite": "^5.4.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react-refresh"
    ],
    "env": {
      "browser": true,
      "es2021": true
    },
    "rules": {
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}
